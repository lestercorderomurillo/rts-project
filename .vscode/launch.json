    "version": "0.2.0",
    "configurations": [
        {
            "name": "rts debugging",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/program",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/bin/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath" : "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Habilitar la impresión con sangría para gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}